@page
@model CS3750Assignment1.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Edit Course</h2>
    <form method="post">
        <input type="hidden" asp-for="Course.Id" />

        <div class="mb-3">
            <label class="form-label">Instructor ID</label>
            <input asp-for="Course.InstructorID" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Course Name</label>
            <input asp-for="Course.Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Course Number</label>
            <input asp-for="Course.CourseNumber" type="number" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Credits</label>
            <input asp-for="Course.Credits" type="number" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Capacity</label>
            <input asp-for="Course.Capacity" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Meeting Days</label><br />
            <input asp-for="MeetingSunday" type="checkbox" /> Sunday
            <input asp-for="MeetingMonday" type="checkbox" /> Monday
            <input asp-for="MeetingTuesday" type="checkbox" /> Tuesday
            <input asp-for="MeetingWednesday" type="checkbox" /> Wednesday
            <input asp-for="MeetingThursday" type="checkbox" /> Thursday
            <input asp-for="MeetingFriday" type="checkbox" /> Friday
            <input asp-for="MeetingSaturday" type="checkbox" /> Saturday
        </div>

        <div class="mb-3">
            <label class="form-label">Meeting Time</label>
            <input asp-for="Course.MeetingTime" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Course.Location" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-page="/WelcomeInstructor" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@Model.Course.Id" onclick="return confirm('Are you sure you want to delete this course?');">
            Delete Course
        </button>

    </form>
</div>
