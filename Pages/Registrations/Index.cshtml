@page
@model CS3750Assignment1.Pages.Registrations.IndexModel

@{
    ViewData["Title"] = "Dashboard";
}



<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Welcome, Student!</h2>
        </div>
        <div class="card-body">
            <p>Access your courses, assignments, and student resources from your dashboard.</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Registration[0].CourseID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Registration[0].StudentID)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Registration)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentID)
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Drop</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-page="/Index" class="btn btn-danger">Logout</a>
        </div>
    </div>
</div>
