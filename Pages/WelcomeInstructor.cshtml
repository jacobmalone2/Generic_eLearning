@page "{id:int}"
@model CS3750Assignment1.Pages.WelcomeInstructorModel
@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "_Layout"; // Ensure it uses the main layout
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Welcome, Instructor!</h2>
        </div>
        <div class="card-body">
            <p class="lead">Instructor ID: <strong>@Model.InstructorId</strong></p>

            <p>Manage your courses, students, and resources from your dashboard.</p>

            <a asp-page="/Index" class="btn btn-danger">Logout</a>
        </div>
    </div>
</div>
